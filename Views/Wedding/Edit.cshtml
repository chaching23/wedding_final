@model Wedding 
<div style="display: inline-block; width:650px;"><h1>EDIT your Wedding </h1></div>
<div style="display: inline-block; width:250px;float:right;"><h6><a asp-action="Dashboard">Dashboard</a> |<a href="/Logout">Lougout</a></h6></div>

<div style="display: inline-block; width:350px;">

    <form asp-action="Update"  asp-route-ActId="@Model.WedId" asp-controller="Wedding" method="post">
        <div class="form-group">
            
            <span class="error" asp-validation-for="Wed1"></span>
            <br>
            <label asp-for="Wed1">Wedder One:</label>
            <input class="form-control" asp-for="Wed1" style="width:300px">
        </div>
        <div class="form-group">
            <span class="error" asp-validation-for="Wed2"></span>
            <br>
            <label asp-for="Wed2">Wedder Two:</label>
            <input class="form-control" asp-for="Wed2" style="width:300px">
        </div>
        <div class="form-group">
            <span class="error" asp-validation-for="Date"></span>
            <br>
            <label asp-for="Date">Date:</label>
            <input type="date" class="form-control" asp-for="Date" style="width:300px">
        </div>
        <div class="form-group">
            <span class="error" asp-validation-for="Address"></span>
            <br>
            <label asp-for="Address">Wedding Address:</label>
            <input type="text" class="form-control" asp-for="Address" style="width:300px">
        </div>



        <br>
        <button class="btn btn-primary">Update</button>
    </form>

</div>