@model User

<div style="display: inline-block; width:350px;">
    <h1>Register</h1>
    <form asp-action="Register" asp-controller="Home" method="post">
        
        <span asp-validation-for="FirstName"></span>
        <br>
        <label asp-for="FirstName"></label>
        <input class="form-control" asp-for="FirstName" style="width:300px">

        <span asp-validation-for="LastName"></span>
        <br>
        <label asp-for="LastName"></label>
        <input class="form-control" asp-for="LastName" style="width:300px">

        <span asp-validation-for="Email"></span>
        <br>
        <label asp-for="Email"></label>
        <input type="email" class="form-control" asp-for="Email" style="width:300px">

        <span asp-validation-for="Password"></span>
        <br>
        <label asp-for="Password"></label>
        <input type="password" class="form-control" asp-for="Password" style="width:300px">

        <span asp-validation-for="Confirm"></span>
        <br>
        <label asp-for="Confirm"></label>
        <input type="password" class="form-control" asp-for="Confirm" style="width:300px">
        <br>
        <button class="btn btn-primary">Sign Up</button>
    </form>

</div>